<head>

<%= stylesheet_link_tag    "home", :media => "all" %>

<style type="text/css" rel="stylesheet">
	<% if user_signed_in? %>
		<%  @cur_user.tasks.each do |task| %>

			.meter-bar-<%= task.id %> {
				background-color: #2a2;
				width: <%= task_percentage(task) %>%;
				border-radius: 3px;
			}

			.percent-bar-<%= task.id %> {
				width: <%= task_percentage(task) %>%;
			}
			

		<% end %>

	<% end %>
</style>

	
</head>
<body>


<% if @cur_user %>
<div class="header-div">

	<h1 class="my-tasks"><%= @cur_user.username %>'s Tasks</h1>


	<div class="dropdown sort-dropdown">
	  <button class="btn btn-success dropdown-toggle sort-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" onclick="toggle_dropdown()">
	    New Task
	  </button>
	  <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
		  <ul class="sort-list">
		  	<li><a class="dropdown-item" href="#">Time Left</a></li>
		  	<li><a class="dropdown-item" href="#">Percent Completed</a></li>
		    <li><a class="dropdown-item" href="#">Recently Created</a></li>
		  </ul>
	  </div>
	</div>

</div>


<br>
<br>
<div id="table-partial-div">
	<%= render(:partial => "table") %>
</div>

<% end %>

</body>
