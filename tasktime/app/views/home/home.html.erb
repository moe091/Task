<head>
<%= stylesheet_link_tag    "home", :media => "all" %>

<style type="text/css" rel="stylesheet">
	<% if user_signed_in? %>

		<% @cur_user.tasks.each do |task| %>

			.meter-bar-<%= task.id %> {
				background-color: #2a2;
				width: <%= task_percentage(task) %>%;
				border-radius: 3px;
			}

		<% end %>

	<% end %>
</style>

	
</head>
<body>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>% Completed</th>
      <th>Completed / Goal</th>
      <th>Time Remaining</th>
    </tr>
  </thead>
  <tbody>
	<% @cur_user.tasks.each do |task| %>
		<tr>

			<td class="table-name table-name-<%= task.id %>"> <strong> <%= task.name %></strong> </td>
			<td class="table-percent table-percent-<%= task.id %>"> <%= task_percentage(task) %> </td>
			<td class="table-completed table-completed-<%= task.id %>"> <%= task.completed %> / <%= task.goal %> Hours</td>
			<td class="table-timeleft table-timeleft-<%= task.id %>"> <%= time_left(task) %> </td>

		</tr>
	<% end %>

  </tbody>
</table>
</body>
