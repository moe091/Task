body {
	background-color: #F1F0FF;
}

.main-div {
	background-color: #F1F0FF;
}
.task-row {
	border-radius: 5px;
    border: 1px solid #000;
    -webkit-box-shadow: -10px 10px 6px 0px rgba(0,0,0,0.75);
	-moz-box-shadow: -10px 10px 6px 0px rgba(0,0,0,0.75);
	box-shadow: -10px 10px 6px 0px rgba(0,0,0,0.75);
    padding: 0;
    margin: 0 0 50px 0;
    background-color: #C3C3E5;
}

.task-col {
	padding: 0px;
	color: #fff;
	background-color: #443266;
}

.task-name {
	background-color: #fff;
	color: #000;
	border-radius: 3px;
	border: 2px solid #000;
	display: inline-block;
	margin: -1px;
	padding: 5px;
	float: left;
}

.task-desc {
	display: inline-block;
	padding-left: 3px;
	align: top;
}

.meter-container {
	margin: 40px 5px 44px 5px;
	position: relative;
	background-color: #E1E3FF;
	height: 50px;
	border-radius: 5px;
	border: 2px black solid;
}

.meter-back,
.meter-bar {
	background-color: #2a2;
	border-radius: 5px;
  	height: 100%;
  	position: absolute;
  	top: 0;
  	left: 0;	
}

.meter-percent {
	color: #443266;
	position: absolute;
  	top: 32%;
  	left: 48%;
  	font-size: 1.2em;
}

.time-period,
.time-remaining {
	position: absolute;
	top: -25px;
	padding: 2px;
}

.time-period{
	background-color: #E1E3FF;
	left: -0.3%;
	border: 2px black solid;
}

.time-remaining {
	right: -0.3%;
}

.time-completed {
	position: absolute;
	bottom: -32px;
	left: -0.3%;
}

.users-tasks-text {
	font-size: 1.2em;
	margin: 0px;
}
.top-area {
	border-bottom: 1px black solid;
	margin: 20px 0px 0px 0px;
}

.btn {
	margin: 8px 4px 8px 4px;
}
.task-btn {
	float: right;
}

.delete-btn {
	float: right;
}

.button-to-wrap {
	float: right;
}



.timer-area {
	display: none;
}



.percent-bar {
	position: absolute;
	top: 1px;
	left: 1px;
	height: 95%;
	width: 30%;
	background-color: #089c18;
}


.percent-text {
	color: #eee;
	position: absolute;
	top: 25%;
	left: 45%;
}

.table-name a:hover {
	background-color: inherit;
}

.table-name a:link {
	text-decoration: underline;
	font-size: 1.1em;
}