 body {
    overflow-x: hidden;
 }

/* Toggle Styles */

#wrapper {
    padding-left: 0;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
}

#wrapper.toggled {
    padding-left: 350px;
}

#sidebar-wrapper {
    z-index: 1000;
    position: fixed;
    left: 350px;
    width: 0;
    height: 100%;
    margin-left: -350px;
    overflow-y: auto;
    background: #000;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
}

#wrapper.toggled #sidebar-wrapper {
    width: 350px;
}

#page-content-wrapper {
    width: 100%;
    position: absolute;
    padding: 15px;
}

#wrapper.toggled #page-content-wrapper {
    position: absolute;
    margin-right: -350px;
}

/* Sidebar Styles */

.sidebar-nav {
    position: absolute;
    top: 0;
    width: 350px;
    margin: 0;
    padding: 0;
    list-style: none;
    
}

.sidebar-nav li {
    text-indent: 20px;
    line-height: 40px;
}

.sidebar-nav li a {
    display: block;
    text-decoration: none;
    color: #a3a3a3;
}

.sidebar-nav li a:hover {
    text-decoration: none;
    color: #f1f1f1;
    border: 1px #fff solid;
}

.sidebar-nav li a:active,
.sidebar-nav li a:focus {
    text-decoration: none;
}

.sidebar-nav > .sidebar-brand {
    height: 55px;
    font-size: 18px;
    line-height: 60px;
}

.sidebar-nav > .sidebar-brand a {
    color: #999999;
}

.sidebar-nav > .sidebar-brand a:hover {
    color: #fff;
    background: none;
}












@media(min-width:768px) {  /* FOR NON-SMALL SCREENS */
    #wrapper {
        padding-left: 350px;
    }

    #wrapper.toggled {
        padding-left: 0;
    }

    #sidebar-wrapper {
        width: 350px;
    }

    #wrapper.toggled #sidebar-wrapper {
        width: 0;
    }

    #page-content-wrapper {
        padding: 20px;
        position: relative;
    }

    #wrapper.toggled #page-content-wrapper {
        position: relative;
        margin-right: 0;
    }

    .task-bar {
    border: 1px #777 solid;
    margin-bottom: -1px;
    text-align: center;
    font-weight: 300;
    font-size: 1.1em;

}

    /* TASK BAR ITEMS */
    .task-bar:hover {

    }

    .task-link-wrap {
        width: 100%;
        height: 55px;
        position: relative;
    }

    .task-link {
       
    }

    .task-meter {
        position: absolute;
        top: 0;
        left: 0;
        height: 55px;
        width: 50%;
        background-color: rgba(77, 255, 122, 0.12);
    }


    /* TASK BAR PROPERTIES/INFO */
    .task-property {
        padding: 0;
        margin: 0;
        text-indent: 0;
        text-align: left;
        color: #ccc;
    }
    .task-name {
        position: absolute;
        top: 7px;
        left: 3px;
        font-size: 1.25em;
        background-color: transparent;
        border: none;
        color: #ccc;
        text-decoration: inherit;
    }


    .task-ending-in {
        font-size: 0.75em;
        font-weight: 150;
        position: absolute;
        left: 3px;
        bottom: 1px;
    }

    .time-togo-div {
        position: absolute;
