
<%= stylesheet_link_tag    "devise", :media => "all" %>



<div class="register-fields">
<h2 id="sign-up-head">Log In</h2> 
<br />

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  

    <div class="field">
      <span class="reg-label-wrap">
        <%= f.label :email, class: "reg-label reg-email-label" %>
      </span>
      <span class="reg-field-wrap">
        <%= f.email_field :email, autofocus: true, class: "reg-field reg-email-field" %>
      </span>
    </div>

    
    <div class="field">
      <span class="reg-label-wrap">
        
        <%= f.label :password, class: "reg-label reg-password-label"%>
        <% if @minimum_password_length %>
          <em class="reg-label">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        
      </span>
      <span class="reg-field-wrap">
        <%= f.password_field :password, autocomplete: "off", class: "reg-field reg-password-field" %>
      </span>
    </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <span class="reg-field-wrap"
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </span>
        </div>
      <% end %>


      <div class="actions">
        <%= f.submit "Log in" %>
      </div>

  </div> <!-- register fields -->

<% end %>

